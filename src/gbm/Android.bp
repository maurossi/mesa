cc_library_shared {
    name: "libgbm_mesa",

    vendor: true,

    include_dirs: [
        "external/mesa/include",
        "external/mesa/src",
        "external/mesa/src/gbm/main",
    ],

    cflags: [
        "-DHAVE_PTHREAD=1",
        "-DHAVE_TIMESPEC_GET",
        "-Wno-missing-field-initializers",
        "-Wno-unused-parameter",
        "-Wno-typedef-redefinition",
    ],

    shared_libs: ["libdrm"],

    static_libs: [
	"libmesa_loader",
	"libmesa_util",
    ],

    srcs: [
	"main/backend.c",
	"main/gbm.c",
	"backends/dri/gbm_dri.c",
    ],

    export_include_dirs: ["./main"],
}

cc_library_static {
    name: "libmesa_loader",

    vendor: true,

    include_dirs: [
        "external/mesa/include",
        "external/mesa/src",
    ],

    cflags: [
        "-DHAVE_LIBDRM",
        "-DPREFER_IRIS",
        "-Wno-missing-field-initializers",
        "-Wno-sign-compare",
    ],

    shared_libs: ["libdrm"],

    srcs: [
        "loader.c",
        "pci_id_driver_map.c",
    ],

    multilib: {
        lib32: {
            cflags: ["-DDEFAULT_DRIVER_DIR=\"/vendor/lib/dri\""],
        },
        lib64: {
            cflags: ["-DDEFAULT_DRIVER_DIR=\"/vendor/lib64/dri\""],
        },
    },

    export_include_dirs: ["."],
}
